CREATE TABLE Transactions (
    transactionId INT PRIMARY KEY ,
    senderAccountNo VARCHAR(20) NOT NULL,
    receiverAccountNo VARCHAR(20) NOT NULL,
    amount DOUBLE NOT NULL,
    transactionTime TIMESTAMP DEFAULT CURRENT_TIMESTAMP,

    CONSTRAINT fk_transaction_sender FOREIGN KEY (senderAccountNo)
        REFERENCES Customers(accountNo),
        
    CONSTRAINT fk_transaction_receiver FOREIGN KEY (receiverAccountNo)
        REFERENCES Customers(accountNo)
);


CREATE TABLE Loans (
    loanId INT PRIMARY KEY ,
    customerId INT NOT NULL,
    loanAmount DOUBLE NOT NULL,
    status VARCHAR(20) DEFAULT 'Pending',
    createdAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updatedAt TIMESTAMP DEFAULT CURRENT_TIMESTAMP,

    CONSTRAINT fk_loan_customer FOREIGN KEY (customerId)
        REFERENCES Customers(customerId)
);


drop table loans;



