CREATE TABLE Employees (
    empId INT PRIMARY KEY ,
    name VARCHAR(100),
    email VARCHAR(100) UNIQUE,
    password VARCHAR(100),
    role VARCHAR(50),
    address VARCHAR(200),
    contact VARCHAR(15)
);

select * from customers;

